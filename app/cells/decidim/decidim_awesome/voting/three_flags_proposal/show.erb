<h4 class="heading4 vote-title"><%= t("decidim.decidim_awesome.proposal_m.modal.title") %></h4>
<div class="flex--sbc">
  <%= vote_block_for(proposal, 3) %>
  <%= vote_block_for(proposal, 2) %>
  <%= vote_block_for(proposal, 1) %>
</div>

<%= action_authorized_link_to :vote,
                              proposal.manifest.label_for(0),
                              proposal_vote_path(0),
                              resource: proposal,
                              remote: true,
                              data: { label: proposal.manifest.label_for(0), weight: 0 },
                              method: voted_for?(0) ? :delete : :post,
                              class: "button vote-action expanded abstain-button small #{opacity_class_for(0)}" %>
