<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= t("menu.admin_accountability", scope: "decidim.admin", default: "Admin accountability") %></h2>
  </div>

  <div class="card-section">
    <div class="table-scroll">
      <table class="table-list">
        <thead>
        <tr>
          <th>
            <%= "Role" %>
          </th>
          <th>
            <%= "Name" %>
          </th>
          <th>
            <%= "Email" %>
          </th>
          <th>
            <%= "Participatory space" %>
          </th>
          <th>
            <%= "last Sign in date" %>
          </th>
          <th>
            <%= "Creation date" %>
          </th>
          <th>
            <%= "Removal date" %>
          </th>
        </tr>
        </thead>
        <tbody>
        <% @user_logs.uniq { |log| log.decidim_user_id }.each do |log| %>
          <% user = log.user %>
          <tr>
            <td><%= @user_roles[log.decidim_user_id].role %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= log.participatory_space_type %></td>
            <td><%= user.last_sign_in_at %></td>
            <td><%= user.created_at %></td>
            <td></td>
          </tr>
        <% end %>
        </tbody>
        </tbody>
      </table>
    </div>
  </div>
</div>
